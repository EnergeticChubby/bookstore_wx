.order-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.address-section {
  margin-bottom: 20rpx;
}

.address-content {
  background: #fff;
  padding: 30rpx 20rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.goods-section {
  margin-bottom: 20rpx;
}

.goods-list {
  background: #fff;
}

.goods-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
}

.goods-price {
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
}

.goods-quantity {
  font-size: 26rpx;
  color: #999;
}

.order-info {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}

.info-item.total {
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
  padding-top: 20rpx;
  font-weight: bold;
  color: #333;
}

.total-price {
  color: #ff6b6b;
  font-size: 36rpx;
}

.payment-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.pay-btn {
  background: #ff6b6b;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
  width: 90%;
  margin: 0 auto;
} 