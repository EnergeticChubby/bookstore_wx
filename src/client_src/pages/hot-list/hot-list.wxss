/* pages/hot-list/hot-list.wxss */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 20rpx;
}

.header {
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.book-list {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
}

.book-item {
  margin-bottom: 20rpx;
}

.book-content {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
}

.book-image {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-info {
  flex: 1;
}

.book-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.rank-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-right: 12rpx;
  min-width: 40rpx;
}

.book-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.book-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.book-category {
  color: #F0E68C;
  margin-right: 8rpx;
}

.dot {
  color: #999;
  margin: 0 8rpx;
}

.hot-value {
  display: flex;
  align-items: center;
  color: #ff4d4f;
}

.hot-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
} 