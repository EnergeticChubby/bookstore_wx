/* pages/network-test/network-test.wxss */
.container {
  padding: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30px;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 15px;
  margin-bottom: 30px;
}

.button-group button {
  width: 100%;
}

.result-section, .status-section {
  background: #f5f5f5;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #333;
}

.result-content {
  background: white;
  padding: 10px;
  border-radius: 4px;
  min-height: 100px;
  word-break: break-all;
}

.status-content {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.status-content text {
  color: #666;
} 