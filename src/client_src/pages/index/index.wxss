/* Page.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  background: white;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 通用section样式 */
.section {
  background: white;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  margin: 32rpx 0 24rpx 24rpx;
}

.more-link {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 热门书单滚动区域 */
.book-scroll {
  width: 100%;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.book-shelf {
  display: flex;
  flex-direction: column;
  width: max-content;
}

.book-row {
  display: flex;
  flex-direction: row;
  gap: 40rpx;
  margin-bottom: 40rpx;
}

.book-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 420rpx;
  min-width: 320rpx;
  max-width: 480rpx;
  height: 180rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
  margin: 0;
  transition: all 0.2s;
  padding: 0;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  object-fit: cover;
  border-radius: 8rpx 0 0 8rpx;
  flex-shrink: 0;
  margin: 10rpx 0 10rpx 10rpx;
}

.book-info-horizontal {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 16rpx 16rpx 16rpx 20rpx;
  flex: 1;
  min-width: 0;
  position: relative;
}

.book-info {
  flex: 1;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-rank {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.book-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #222;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  white-space: normal;
  line-height: 1.3;
  min-height: 2.6em;
  hyphens: auto;
  -webkit-hyphens: auto;
}

.book-meta {
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.book-category {
  color: #F0E68C;
}

.dot {
  margin: 0 8rpx;
}

.book-hot {
  display: flex;
  align-items: center;
}

.hot-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

/* 推荐书籍网格 */
.recommend-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.recommend-item {
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.recommend-cover {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx 8rpx 0 0;
}

.recommend-title {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommend-price {
  font-size: 32rpx;
  color: #ff6b6b;
  padding: 0 10rpx 10rpx;
  font-weight: bold;
}

/* 加载更多提示 */
.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.book-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  gap: 32rpx 24rpx;
  padding: 0 12rpx;
}

.book-card {
  width: 100%;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  background: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  height: 480rpx;
}

.book-cover-area {
  width: 100%;
  height: 340rpx;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-info-area {
  background: #fff;
  padding: 20rpx 20rpx 16rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  min-height: 200rpx;
}

.book-title-row {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.book-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #222;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  white-space: normal;
  line-height: 1.3;
  min-height: 2.6em;
  hyphens: auto;
  -webkit-hyphens: auto;
}

.book-rating-corner {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
}

.book-rating {
  display: flex;
  align-items: flex-end;
}

.star-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #e6b800;
  font-weight: 600;
}

.book-author {
  color: #666;
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 8rpx;
  width: 100%;
  display: block;
}

.book-bottom-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.book-price {
  font-size: 28rpx;
  color: #222;
  font-weight: bold;
}

.book-list-2col {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx 24rpx;
  padding: 0 12rpx;
}

.book-page {
  width: 2000rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  margin-right: 24rpx;
}

