/* pages/cart/cart.wxss */
.cart-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 100rpx;
}

.cart-header {
  width: 100%;
  padding: 60rpx 0 32rpx 0;
  text-align: center;
  background: #fff;
}

.cart-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #222;
  letter-spacing: 2rpx;
}

.cart-list {
  padding: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.cart-checkbox {
  margin-right: 14rpx;
  transform: scale(0.8);
  margin-top: 10rpx;
}

.cart-cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  object-fit: cover;
  background: #f7f7f7;
  margin-right: 14rpx;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-price {
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.minus, .plus {
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.quantity-control input {
  width: 80rpx;
  height: 50rpx;
  text-align: center;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.delete-btn {
  color: #999;
  font-size: 28rpx;
  padding: 20rpx;
}

.settlement-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}

.total-price {
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
}

.settle-btn {
  background: #ff6b6b;
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-cart image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-cart text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.go-shopping {
  padding: 20rpx 60rpx;
  background: #ff6b6b;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}