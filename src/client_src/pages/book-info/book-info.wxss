view {
  margin: 16rpx 0;
}
image {
  display: block;
  margin: 0 auto;
  border-radius: 12rpx;
}

.detail-bg {
  min-height: 100vh;
  padding: 0 0 32rpx 0;
}

.cover-card {
  width: 340rpx;
  margin: 48rpx auto 24rpx auto;
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.10);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0;
}

.book-cover {
  width: 260rpx;
  height: 340rpx;
  border-radius: 18rpx;
  object-fit: cover;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  background: #fff;
  padding: 10rpx;
}

.info-row-card {
  width: 90vw;
  max-width: 600rpx;
  margin: 0 auto 24rpx auto;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 24rpx;
}

.info-badge {
  min-width: 80rpx;
  min-height: 40rpx;
  border-radius: 14rpx;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #35324b;
}

.rating-badge {
  background: #fffbe6;
  color: #e6b800;
}
.category-badge {
  background: #f6eec7;
  color: #35324b;
}
.pages-badge {
  background: #f7f7f7;
  color: #888;
}
.badge-star {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.book-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  text-align: center;
  margin: 24rpx 0 12rpx 0;
}

.book-author {
  color: red !important;
  font-size: 40rpx !important;
  text-align: center !important;
  margin-bottom: 8rpx !important;
  width: 100% !important;
  display: block !important;
  background: yellow !important;
  z-index: 9999 !important;
  position: relative !important;
}

.book-desc {
  color: #444;
  font-size: 26rpx;
  line-height: 1.7;
  margin: 0 32rpx 24rpx 32rpx;
  text-align: center;
}

.buy-btn-container {
  margin: 40rpx auto 0 auto;
  width: 80vw;
  max-width: 500rpx;
  display: flex;
  justify-content: center;
}

.buy-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(90deg, #07c160 0%, #12d18e 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(7,193,96,0.18);
  border: none;
  letter-spacing: 2rpx;
  transition: background 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}
.buy-btn:active {
  background: linear-gradient(90deg, #05a150 0%, #0fae6d 100%);
}

/* 调试作者字段 */
view:nth-child(4) {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.top-bg-block {
  padding-top: 80rpx;
  padding-bottom: 32rpx;
  margin-bottom: 0;
} 