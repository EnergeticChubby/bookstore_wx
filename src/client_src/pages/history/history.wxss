.history-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  margin: 32rpx 0 16rpx 32rpx;
}
.history-list {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  padding: 0 24rpx;
}
.history-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 14rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  padding: 12rpx 14rpx;
}
.history-cover {
  width: 72rpx;
  height: 100rpx;
  border-radius: 8rpx;
  object-fit: cover;
  margin-right: 14rpx;
  box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.04);
}
.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}
.history-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 2rpx;
  line-height: 1.2;
}
.history-author {
  font-size: 20rpx;
  color: #07c160;
}
.empty-history {
  text-align: center;
  color: #aaa;
  font-size: 26rpx;
  margin: 40rpx 0;
} 