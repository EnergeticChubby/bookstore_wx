.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.edit-form {
  background: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.biography-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.submit-btn {
  width: 100%;
  background: #007aff;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 4rpx;
  margin-top: 40rpx;
}

.submit-btn:active {
  opacity: 0.8;
}

.password-input {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
} 