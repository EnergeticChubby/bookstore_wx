.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  background: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

input {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  min-height: 88rpx;
  line-height: 1.4;
}

textarea {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  min-height: 240rpx;
  line-height: 1.6;
}

.image-upload {
  width: 100%;
  height: 300rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background: #f8f8f8;
}

.image-upload image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.upload-placeholder {
  color: #999;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 40rpx;
  width: 100%;
  background: #007aff;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
}

.submit-btn:active {
  background: #0062cc;
}

.author-list {
  margin-bottom: 20rpx;
}

.author-item {
  background: #fafafa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.author-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.author-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.delete-author {
  font-size: 24rpx;
  color: #ff4d4f;
  padding: 8rpx 16rpx;
}

.author-item input {
  margin-bottom: 16rpx;
  min-height: 88rpx;
}

.author-item textarea {
  min-height: 200rpx;
}

.add-author {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  color: #666;
  font-size: 28rpx;
  gap: 8rpx;
}

.add-icon {
  font-size: 32rpx;
  color: #007aff;
}

.add-author:active {
  background: #eee;
} 