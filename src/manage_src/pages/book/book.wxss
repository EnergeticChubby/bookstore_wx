/* pages/book/book.wxss */
.book-container {
  padding: 20rpx;
  background: #f5f5f5;
  padding-bottom: 120rpx;
  padding-top: 60rpx;
}

.loading {
  text-align: center;
  color: #888;
  margin-top: 100rpx;
}

.book-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.book-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  overflow: hidden;
  position: relative;
  padding-bottom: 80rpx;
}

.book-cover {
  width: 160rpx;
  height: 220rpx;
  object-fit: cover;
  margin-right: 20rpx;
  background: #eee;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}

.book-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 10rpx;
}

.book-meta text {
  display: inline-block;
  font-size: 24rpx;
  color: #888;
  margin-right: 24rpx;
  margin-bottom: 6rpx;
}

.book-authors {
  margin: 10rpx 0;
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.authors-label {
  color: #888;
  margin-right: 10rpx;
}

.author-name {
  font-size: 26rpx;
  color: #666;
  margin-right: 16rpx;
}

.book-desc {
  font-size: 26rpx;
  color: #444;
  margin-top: 10rpx;
  line-height: 1.6;
  max-height: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  background: #fff;
  padding: 4rpx 20rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  z-index: 100;
}

.search-input {
  flex: 1;
  height: 56rpx;
  border: none;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.search-btn {
  height: 56rpx;
  padding: 0 32rpx;
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-actions {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.edit-btn {
  background: #007aff;
  color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
  line-height: 2;
  border-radius: 4rpx;
}

.add-book-btn-wrapper {
  position: fixed;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  z-index: 100;
}

.add-book-btn {
  width: 100%;
  background: #007aff;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 0;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.no-results {
  text-align: center;
  padding: 40rpx;
  color: #888;
  font-size: 28rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 8rpx #eee;
}

.book-list::-webkit-scrollbar {
  width: 20rpx;
  background-color: transparent;
  position: absolute;
  right: 0;
}

.book-list::-webkit-scrollbar-track {
  background: transparent;
  width: 20rpx;
}

.book-list::-webkit-scrollbar-thumb {
  background-color: #07c160;
  border-radius: 10rpx;
  min-height: 200rpx;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  margin-bottom: 120rpx;
  gap: 40rpx;
  position: relative;
}

.page-btn {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  background: #007aff;
  color: #fff;
  border-radius: 6rpx;
  line-height: 1.5;
  white-space: nowrap;
  min-width: 100rpx;
}

.page-btn[disabled] {
  background: #ccc;
  color: #fff;
}

.page-input-wrapper {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 6rpx;
  padding: 4rpx 12rpx;
  border: 1rpx solid #ddd;
}

.page-input {
  width: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.page-separator {
  color: #666;
  font-size: 24rpx;
}

.total-pages {
  color: #666;
  font-size: 24rpx;
}

.confirm-btn {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  background: #007aff;
  color: #fff;
  border-radius: 6rpx;
  line-height: 1.5;
  white-space: nowrap;
  min-width: 80rpx;
}

.page-info {
  font-size: 24rpx;
  color: #666;
}

.no-data {
  text-align: center;
  color: #888;
  margin-top: 100rpx;
  font-size: 28rpx;
}

.book-list {
  margin-top: 20rpx;
}