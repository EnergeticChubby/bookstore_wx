/* pages/user/user.wxss */
.container {
  padding: 30rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.loading {
  text-align: center;
  color: #666;
  margin-top: 100rpx;
  font-size: 28rpx;
}

.no-permission {
  text-align: center;
  color: #ff4d4f;
  margin-top: 100rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.user-list {
  margin-top: 20rpx;
}

.user-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.user-item:active {
  transform: scale(0.98);
}

.user-info {
  margin-bottom: 24rpx;
}

.info-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.info-cell {
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  display: flex;
  align-items: flex-start;
}

.info-cell .label {
  min-width: 120rpx;
  flex-shrink: 0;
}

.status-row {
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.status-row .label {
  min-width: 120rpx;
  flex-shrink: 0;
}

.status-row .value {
  flex: 1;
  word-break: break-all;
}

.label {
  color: #666;
  font-size: 26rpx;
  margin-right: 12rpx;
  font-weight: 500;
}

.value {
  color: #333;
  font-size: 26rpx;
  flex: 1;
  word-break: break-all;
}

.username .value {
  font-weight: 600;
  font-size: 30rpx;
  color: #1a1a1a;
}

.actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;
}

.edit-btn {
  margin: 0;
  width: 140rpx;
  background: #007aff;
  color: #fff;
  font-size: 26rpx;
  padding: 12rpx 0;
  border-radius: 8rpx;
  line-height: 1.5;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0,122,255,0.2);
  transition: all 0.3s ease;
}

.edit-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0,122,255,0.2);
}